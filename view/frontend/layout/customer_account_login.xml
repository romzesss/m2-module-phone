<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="customer_form_login" remove="true"/>
        <referenceContainer name="customer.login.container">
            <block class="Magento\Customer\Block\Form\Login" name="sablesoft_phone_customer_form_login"
                   before="customer.new"
                   template="SableSoft_Phone::form/login.phtml">
                <container name="form.additional.info" as="form_additional_info"/>
            </block>
        </referenceContainer>
    </body>
</page>
